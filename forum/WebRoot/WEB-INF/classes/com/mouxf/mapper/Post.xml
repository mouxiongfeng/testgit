<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mouxf.forum.post.repository.PostRepository">
	<resultMap type="Post" id="postList">
		<id column="post_id" property="postId"/>
		<result column="post_title" property="postTitle"/>
		<result column="post_content" property="postContent"/>
		<result column="post_date" property="postDate"/>
		<association property="user" javaType="User">
			<id property="userId" column="user_id"/>
			<id property="userName" column="user_name"/>
		</association>
	</resultMap>
	
	<select id="getPostList" resultMap="postList">
		select p.post_id,p.post_title,p.post_content,p.post_date,u.user_id,u.user_name
			from post p,user u
			where p.user_id=u.user_id
	</select>
</mapper>